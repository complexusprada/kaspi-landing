---
interface Props {
  size?: 'sm' | 'md' | 'lg';
  showText?: boolean;
}

const { size = 'md', showText = true } = Astro.props;

const sizeClasses = {
  sm: 'h-8',
  md: 'h-10',
  lg: 'h-14',
};

const textClasses = {
  sm: 'text-lg',
  md: 'text-xl',
  lg: 'text-2xl',
};

const iconSizes = {
  sm: 32,
  md: 40,
  lg: 56,
};
---

<div class="flex items-center gap-2">
  <!-- Logo Icon - Speedometer -->
  <svg
    width={iconSizes[size]}
    height={iconSizes[size]}
    viewBox="0 0 48 48"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class={sizeClasses[size]}
  >
    <!-- Speedometer arc -->
    <path
      d="M8 32C8 20.954 16.954 12 28 12"
      stroke="#D52027"
      stroke-width="4"
      stroke-linecap="round"
      fill="none"
    />
    <path
      d="M12 36C12 24.954 19.954 16 32 16"
      stroke="#D52027"
      stroke-width="3"
      stroke-linecap="round"
      fill="none"
      opacity="0.4"
    />
    <!-- Needle pointing to max -->
    <line x1="24" y1="28" x2="38" y2="16" stroke="#D52027" stroke-width="3" stroke-linecap="round" />
    <circle cx="24" cy="28" r="4" fill="#D52027" />
  </svg>

  <!-- Logo Text -->
  {showText && (
    <span class={`${textClasses[size]} font-black tracking-tight`}>
      <span class="text-[#D52027]">KASPI</span><span class="text-foreground">RACE</span>
    </span>
  )}
</div>
